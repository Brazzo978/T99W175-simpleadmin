#!/bin/bash
set -eu

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=/dev/null
. "$SCRIPT_DIR/session_utils.sh"

WEBUI_DISABLED="${SIMPLEADMIN_WEBUI_DISABLED:-0}"

if [ "$WEBUI_DISABLED" = "1" ] || [ "$WEBUI_DISABLED" = "true" ]; then
    WEBUI_DISABLED=1
else
    WEBUI_DISABLED=0
fi

payload=$(cat <<JSON
{
  "success": true,
  "data": {
    "disabled": ${WEBUI_DISABLED:-0}
  }
}
JSON
)

send_json_response 200 "$payload"
